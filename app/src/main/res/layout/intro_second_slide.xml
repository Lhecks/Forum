<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_second_screen">

    <TextView
        android:id="@+id/text_view_pager_title"
        style="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:padding="4dp"
        android:text="Your New world"
        android:textColor="#ffff"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/image_view_pager_intro"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/suburban" />

    <TextView
        android:id="@+id/text_view_pager_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pager_intro_linear_dots"
        android:layout_marginBottom="30dp"
        android:padding="2dp"
        android:text="@string/lorem"
        android:textColor="@color/colorWhite"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/pager_intro_linear_dots"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal|center"
        android:orientation="horizontal" />

</RelativeLayout>